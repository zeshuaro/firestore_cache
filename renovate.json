{
  "extends": ["config:base"],
  "ignorePaths": ["example/ios/", "example/android/"],
  "labels": ["dependencies"],
  "semanticCommits": "enabled",
  "schedule": ["after 6pm every weekday", "every weekend"],
  "timezone": "Australia/Sydney",
  "packageRules": [
    {
      "groupName": "Firebase dependencies",
      "matchPaths": ["**/pubspec.yaml"],
      "matchPackagePrefixes": ["firebase_", "cloud_firestore"]
    },
    {
      "groupName": "GitHub Actions dependencies",
      "matchPaths": [".github/workflows/*.yml"],
      "addLabels": ["ci"]
    }
  ]
}
